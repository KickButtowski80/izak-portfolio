{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*"]
    },
    "typeRoots": ["../node_modules/@types"],
    "checkJs": false
  },
  "include": ["./**/*.js"],
  "exclude": ["node_modules"]
}
